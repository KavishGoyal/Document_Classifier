FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir streamlit requests pandas plotly

# Copy application
COPY ui /app/ui

# Expose port
EXPOSE 8501

# Run streamlit
CMD ["streamlit", "run", "ui/app.py", "--server.port", "8501", "--server.address", "0.0.0.0"]